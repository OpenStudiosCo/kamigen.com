extends layout.pug

block append head
  link(href='/dist/website.css', rel='stylesheet')

block append page
  .ui.grid.stackable
    .row
      .column
        #main_menu.ui.five.column.very.relaxed.grid.center.aligned
          .column
            a.ui.button.inverted.big.fluid(href='/comics.html') Comics
          .column
            a.ui.button.inverted.big.fluid(href='/game.html') Game
          .column.logo
            a(href='/')
              img(src='/art/design/Website%20Logo-01.png' title="Return to the Kamigen Homepage")
          .column
            a.ui.button.inverted.big.fluid(href='/shop.html') Shop
          .column
            a.ui.button.inverted.big.fluid(href='/wiki.html') Wiki
        #mobile_menu.ui.fluid.vertical.menu.inverted
          .item.logo
            a(href='/')
              img(src='/art/design/Website%20Logo-01.png' title="Return to the Kamigen Homepage")
            #mobile_menu_toggle
              i.content.icon
          .item
            a.ui.button.inverted.big.fluid(href='/comics.html') Comics
          .item
            a.ui.button.inverted.big.fluid(href='/game.html') Game
          .item
            a.ui.button.inverted.big.fluid(href='/shop.html') Shop
          .item
            a.ui.button.inverted.big.fluid(href='/wiki.html') Wiki
    .ui.dividing.header
    block content
    .row.footer
      .column.five.wide
        .ui.horizontal.list
          .item
            a(href='https://www.deviantart.com/thezeski/gallery/70776399/kamigen-comics' title='Kamigen Comics on DeviantArt')
              img.ui.mini.image(src='/assets/deviantart.png' alt='Deviantart')
          .item
            a(href='https://www.facebook.com/kamigenofficial/' title='Kamigen Facebook Page')
              img.ui.mini.image(src='/assets/facebook.png' alt='Facebook')
          .item
            a(href='https://www.instagram.com/kamigen_comics/' title='Kamigen Comics Instagram')
              img.ui.mini.image(src='/assets/instagram.png' alt='Facebook')
      .column.six.wide
        a(href='/' title="Kamigen")
          img(src='/art/design/Website%20Footer%20Logo-01.png' alt="Kamigen")
      .column.five.wide
        a(href='https://openstudios.xyz' title='An Open Studios Project')
          img.ui.image.small(src='/assets/open_studios_logo.png' style='margin: 0 auto' alt="Open Studios logo")
